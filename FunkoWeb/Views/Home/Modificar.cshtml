@model FunkoWeb.DTOs.FunkoUpdateDto

@{
    ViewData["Title"] = "Modificar Funko";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0" style="border-radius: 20px; overflow: hidden;">
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <h2 class="mb-0" style="font-weight: 700; letter-spacing: 1px;">✏️ Modificar Funko</h2>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Modificar" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Image" />
                        
                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <label asp-for="Name" class="form-label">
                                    <i class="bi bi-tag-fill"></i> Nombre del Funko
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Ej: Iron Man Mark 85" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <label asp-for="Price" class="form-label">
                                    <i class="bi bi-currency-dollar"></i> Precio
                                </label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <label asp-for="Stock" class="form-label">
                                    <i class="bi bi-box-seam"></i> Cantidad en Stock
                                </label>
                                <input asp-for="Stock" type="number" class="form-control" placeholder="0" />
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-12 mb-4">
                                <label class="form-label">
                                    <i class="bi bi-image"></i> Nueva Imagen del Funko
                                </label>
                                <input type="file" name="fichero" class="form-control" accept="image/*" />
                                <small class="form-text text-muted mt-2">
                                    💡 Deja vacío para mantener la imagen actual
                                </small>
                            </div>
                            
                            <div class="col-md-12 mb-4">
                                <label asp-for="CategoryId" class="form-label">
                                    <i class="bi bi-bookmark-fill"></i> Categoría
                                </label>
                                <select asp-for="CategoryId" class="form-select">
                                    @foreach (var cat in FunkoWeb.Data.InMemoryData.Categories)
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="d-flex gap-3 justify-content-center mt-4">
                            <button type="submit" class="btn btn-primary px-5">
                                <i class="bi bi-save"></i> Actualizar Funko
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-5">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}